---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline is:global>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(87,155,143);
    --aw-color-secondary: rgb(52,75,71);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(87,155,143);
    --aw-color-text-default: rgb(52,75,71);
    --aw-color-text-muted: rgb(52,75,71);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(52,75,71);

    ::selection {background-color: rgb(52,75,71);;}

  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(109 40 217);
    --aw-color-secondary: rgb(255 255 255);
    --aw-color-accent: rgb(255 255 255);

    --aw-color-text-heading: rgb(0 0 0); 
    --aw-color-text-default:  rgb(255 255 255);
    --aw-color-text-muted:  rgb(255 255 255);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);

    ::selection {background-color: black; color:  rgb(255 255 255);}

  }
</style>
